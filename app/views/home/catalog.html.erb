<h2 id="notice"><%= notice %></h2>
	<h1><%= link_to "View Cart >>>", cart_path %></h1>
<h1>Our Catalog </h1>
<% @prod.each do |p| %>

	<product>
	<table width='100%'>
	<tr><td align='center'><b><%= link_to p.prodname,  product_path(p.id) %> </b></td></tr>
	<tr><td><center><%= link_to (image_tag p.mainimg, size:"160x150"), product_path(p.id) %> </center></td></tr>
	<tr><td align='center'>

	<%= form_tag :controller => 'home', :action => 'buy' do %>
		<b>Price:</b> <%= number_to_currency(p.price)%>
		<br><b>Add Custom Message</b>
		<%= text_field_tag 'tagmsg' %> </br>
		<%= hidden_field_tag 'prodid', "#{p.id}" %> </br>
		<%= hidden_field_tag 'prodname', "#{p.prodname}" %> </br>
			<%= select_tag "qty", "<option>0</option> <option>1</option> <option>2</option> <option>3</option> <option>4</option> <option>5</option>".html_safe %>
		<%= submit_tag 'Add To Cart', :class => 'button1' %>
	<% end %>
	</td></tr>
	</table>
	</product>

<% end %>

<script>
//test hi
var hi = function(element) {
	prompt("Hi!" + this.className);
	this.className = "modal";
	}

// Get the modal
var modal = document.getElementsByClassName('modal');

// Get the button that opens the modal
var btn = document.getElementsByClassName("customizeBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

</script>
