<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Occasion</th>
      <th>Isgift</th>
      <th>Boxmessage</th>
      <th>Tagmessage</th>
      <th>Tagfontcolor</th>
      <th>Tagcolor</th>
	  <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.product_id %></td>
        <td><%= order_item.occasion %></td>
        <td><%= order_item.isgift %></td>
        <td><%= order_item.boxmessage %></td>
        <td><%= order_item.tagmessage %></td>
        <td><%= order_item.tagfontcolor %></td>
        <td><%= order_item.tagcolor %></td>
		<td><%= order_item.quantity %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

